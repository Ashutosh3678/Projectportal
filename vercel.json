{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/css/(.*)",
      "dest": "/frontend/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/frontend/js/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/frontend/images/$1"
    },
    {
      "src": "/fonts/(.*)",
      "dest": "/frontend/fonts/$1"
    },
    {
      "src": "/(.*)\\.html",
      "dest": "/frontend/html/$1.html"
    },
    {
      "src": "/",
      "dest": "/frontend/html/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/html/$1.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}